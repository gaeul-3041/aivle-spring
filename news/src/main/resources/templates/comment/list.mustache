<div id="comments-list">
    {{#comments}}
        <div class="card m-2" id = "comment-{{commentId}}">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong><span>{{nickname}}</span></strong>
                <form action="/comment/delete/{{commentId}}" method="post" class="d-inline">
                    <input type="password" name="password" placeholder="Enter password" class="mr-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-body">
                {{content}}
            </div>
        </div>
    {{/comments}}
</div>